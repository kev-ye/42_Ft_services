FROM alpine:latest

COPY . /APP
WORKDIR /APP

# VOLUME /sys/fs/cgroup

RUN echo "nameserver 8.8.8.8" > /etc/resolv.conf \
	&& apk update \
	&& apk add --no-cache grafana openrc wget telegraf

# config telegraf
RUN mv /APP/srcs/telegraf.conf /etc/telegraf.conf.d/telegraf.conf

EXPOSE 3000

CMD ["/bin/sh", "./srcs/init.sh"]