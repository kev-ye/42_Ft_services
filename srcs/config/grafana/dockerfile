FROM alpine:latest

COPY . /APP
WORKDIR /APP

# VOLUME /sys/fs/cgroup

RUN echo "nameserver 8.8.8.8" > /etc/resolv.conf \
	&& apk update \
	&& apk add --no-cache openrc wget telegraf vim \
	&& wget https://dl.grafana.com/oss/release/grafana-6.7.2.linux-amd64.tar.gz \
	&& tar -zxvf grafana-6.7.2.linux-amd64.tar.gz \
	&& rm -rf grafana-6.7.2.linux-amd64.tar.gz \
	&& mv ./grafana-6.7.2 /etc/grafana

# telegraf config
RUN mkdir /etc/telegraf/
ADD ./srcs/telegraf.conf /etc/telegraf/telegraf.conf

# grafana config
ADD ./srcs/grafana.db /etc/grafana/data/

EXPOSE 3000

CMD ["/bin/sh", "./srcs/init.sh"]