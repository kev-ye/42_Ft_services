FROM alpine:latest

COPY . /APP
WORKDIR /APP

RUN echo "nameserver 8.8.8.8" > /etc/resolv.conf \
	&& apk update \
	&& apk add --no-cache openrc \
	&& apk add --no-cache mariadb mariadb-common mariadb-client

EXPOSE 3306

CMD ["/bin/sh", "./srcs/init.sh"]